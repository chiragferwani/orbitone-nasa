{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "includeFiles": ["build/**", "!build/*.map"]
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/build/assets/$1" },
    { "src": "/(.*)", "dest": "/build/index.html" }
  ]
}
